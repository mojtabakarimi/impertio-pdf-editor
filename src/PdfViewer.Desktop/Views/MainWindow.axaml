                                                                BorderThickness="1"
                                                                Height="150"
                                                                CornerRadius="2">
                                                            <Grid>
                                                                <TextBlock Text="â³"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="24"
                                                                           IsVisible="{Binding IsLoading}"/>
                                                                <Image Source="{Binding ThumbnailImage}"
                                                                       Stretch="Uniform"
                                                                       IsVisible="{Binding !IsLoading}"/>
                                                            </Grid>
                                                        </Border>
                                                        <TextBlock Text="{Binding PageNumber, StringFormat='Page {0}'}"
                                                                   HorizontalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#4A90E2"/>
                                                    </StackPanel>
                                                </Border>
                                            </Panel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Bookmarks Panel -->
                        <DockPanel IsVisible="{Binding IsBookmarksTabSelected}">
                            <!-- No bookmarks message -->
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="8"
                                        IsVisible="{Binding !HasBookmarks}">
                                <TextBlock Text="ðŸ“–"
                                           FontSize="48"
                                           HorizontalAlignment="Center"
                                           Opacity="0.4"/>
                                <TextBlock Text="No bookmarks"
                                           FontSize="14"
                                           Foreground="#999999"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="This document does not contain bookmarks"
                                           FontSize="11"
                                           Foreground="#AAAAAA"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           MaxWidth="200"/>
                            </StackPanel>

                            <!-- Bookmarks TreeView -->
                            <TreeView ItemsSource="{Binding Bookmarks}"
                                      IsVisible="{Binding HasBookmarks}"
                                      Padding="8">
                                <TreeView.ItemTemplate>
                                    <TreeDataTemplate ItemsSource="{Binding Children}">
                                        <Button Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).NavigateFromBookmarkCommand}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="4,6"
                                                Cursor="Hand"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="ðŸ“‘" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Title}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="180"/>
                                                <TextBlock Text="{Binding PageNumber, StringFormat='(p.{0})'}"
                                                           FontSize="10"
                                                           Foreground="#888888"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </TreeDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Background="#E0E0E0"
                          ResizeDirection="Columns"
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding IsSidebarVisible}"/>

            <!-- Main Document Area -->
            <Grid Grid.Column="2" Background="#C8C8C8">
                <!-- Loading Progress Overlay -->
                <Border Background="#80000000"
                        IsVisible="{Binding IsLoading}"
                        ZIndex="100">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                        <TextBlock Text="Loading..." FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <ProgressBar Value="{Binding LoadingProgress}" Maximum="100" Width="300" Height="20"/>
                        <TextBlock Text="{Binding LoadingProgress, StringFormat='{}{0:F0}%'}" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Single Page View -->
                <ScrollViewer x:Name="DocumentScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              IsVisible="{Binding IsDocumentLoaded}">
                    <!-- Context Menu -->
                    <ScrollViewer.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Zoom In" Command="{Binding ZoomInCommand}"/>
                            <MenuItem Header="Zoom Out" Command="{Binding ZoomOutCommand}"/>
                            <MenuItem Header="Actual Size" Command="{Binding SetActualSizeCommand}"/>
                            <MenuItem Header="Fit to Width" Command="{Binding SetFitWidthCommand}"/>
                            <MenuItem Header="Fit to Page" Command="{Binding SetFitPageCommand}"/>
                            <Separator/>
                            <MenuItem Header="Rotate Clockwise" Command="{Binding RotateClockwiseCommand}"/>
                            <MenuItem Header="Rotate Counter-Clockwise" Command="{Binding RotateCounterClockwiseCommand}"/>
                            <Separator/>
                            <MenuItem Header="First Page" Command="{Binding FirstPageCommand}"/>
                            <MenuItem Header="Previous Page" Command="{Binding PreviousPageCommand}"/>
                            <MenuItem Header="Next Page" Command="{Binding NextPageCommand}"/>
                            <MenuItem Header="Last Page" Command="{Binding LastPageCommand}"/>
                            <Separator/>
                            <MenuItem Header="Print..." Command="{Binding PrintCommand}"/>
                        </ContextMenu>
                    </ScrollViewer.ContextMenu>
                    <Panel>
                        <!-- Single Page Mode -->
                        <Border Background="White"
                                Margin="40"
                                BoxShadow="0 4 8 0 #40000000"
                                CornerRadius="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsSinglePageMode}">
                            <!-- Image displayed at native size - PDF is re-rendered at correct DPI for each zoom level -->
                            <Image Source="{Binding CurrentPageImage}"
                                   Stretch="None"/>
                        </Border>

                        <!-- Two-Page Mode -->
                        <Grid Margin="40"
                              HorizontalAlignment="Center"
                              IsVisible="{Binding IsTwoPageMode}">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="20"
                                        HorizontalAlignment="Center">
                                <!-- Left Page -->
                                <Border Background="White"
                                        BoxShadow="0 4 8 0 #40000000"
                                        CornerRadius="2">
                                    <Image Source="{Binding CurrentPageImage}"
                                           Stretch="None"/>
                                </Border>
                                <!-- Right Page (if available) -->
                                <Border Background="White"
                                        BoxShadow="0 4 8 0 #40000000"
                                        CornerRadius="2"
                                        IsVisible="{Binding SecondPageImage, Converter={x:Static ObjectConverters.IsNotNull}}">
                                    <Image Source="{Binding SecondPageImage}"
                                           Stretch="None"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Continuous Mode -->
                        <ItemsControl ItemsSource="{Binding Pages}"
                                      IsVisible="{Binding IsContinuousMode}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="20" Margin="40"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:PageViewModel">
                                    <Border Background="White"
                                            BoxShadow="0 4 8 0 #40000000"
                                            CornerRadius="2"
                                            HorizontalAlignment="Center"
                                            Width="{Binding Width}"
                                            Height="{Binding Height}">
                                        <Grid>
                                            <!-- Page image -->
                                            <Image Source="{Binding PageImage}"
                                                   Stretch="Uniform"/>
                                            <!-- Loading indicator overlay -->
                                            <Border Background="#F8F8F8"
                                                    IsVisible="{Binding IsLoading}">
                                                <StackPanel HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding PageNumber, StringFormat='Loading page {0}...'}"
                                                               FontSize="14"
                                                               Foreground="#666666"
                                                               Margin="0,8,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Panel>
                </ScrollViewer>

                <!-- Welcome Screen -->
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsVisible="{Binding !IsDocumentLoaded}"
                            Spacing="24">
                    <TextBlock Text="ðŸ“„"
                               FontSize="96"
                               HorizontalAlignment="Center"
                               Opacity="0.3"/>
                    <TextBlock Text="Professional PDF Viewer"
                               FontSize="32"
                               FontWeight="Light"
                               HorizontalAlignment="Center"
                               Foreground="#333333"/>
                    <TextBlock Text="Open a PDF document to get started"
                               FontSize="16"
                               Foreground="#999999"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                                Spacing="12"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                        <Button Content="ðŸ“‚ Open Document"
                                Click="OpenDocument_Click"
                                Padding="24,12"
                                FontSize="16"
                                FontWeight="SemiBold"/>
                        <Button Content="â„¹ï¸ Help"
                                Padding="24,12"
                                FontSize="16"/>
                    </StackPanel>

                    <!-- Quick Tips -->
                    <Border Background="#F0F8FF"
                            BorderBrush="#B0D4FF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,32,0,0"
                            MaxWidth="500">
                        <StackPanel Spacing="8">
                            <TextBlock Text="âŒ¨ï¸ Keyboard Shortcuts"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#333333"/>
                            <StackPanel Spacing="4" Margin="0,8,0,0">
                                <TextBlock Foreground="#666666">
                                    <Run Text="Ctrl+O" FontFamily="Consolas" FontWeight="SemiBold"/>
                                    <Run Text=" - Open document"/>
                                </TextBlock>
                                <TextBlock Foreground="#666666">
                                    <Run Text="Ctrl+F" FontFamily="Consolas" FontWeight="SemiBold"/>
                                    <Run Text=" - Search"/>
                                </TextBlock>
                                <TextBlock Foreground="#666666">
                                    <Run Text="Ctrl+Plus/Minus" FontFamily="Consolas" FontWeight="SemiBold"/>
                                    <Run Text=" - Zoom"/>
                                </TextBlock>
                                <TextBlock Foreground="#666666">
                                    <Run Text="F11" FontFamily="Consolas" FontWeight="SemiBold"/>
                                    <Run Text=" - Full screen"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>

</Window>
