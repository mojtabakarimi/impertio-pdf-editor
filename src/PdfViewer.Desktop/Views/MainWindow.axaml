<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PdfViewer.Desktop.ViewModels"
        xmlns:local="using:PdfViewer.Desktop.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="PdfViewer.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding DocumentTitle}"
        Width="1400" Height="900"
        MinWidth="800" MinHeight="600"
        DragDrop.AllowDrop="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <!-- Foxit/PDF-XChange Style Ribbon -->
        <Style Selector="TabControl.ribbon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="TabControl.ribbon > TabItem">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,1,10,1"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="TabControl.ribbon > TabItem:selected">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1A73E8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
        </Style>

        <Style Selector="TabControl.ribbon > TabItem:pointerover">
            <Setter Property="Background" Value="#E8F0FE"/>
        </Style>

        <Style Selector="TabControl.ribbon > TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="IsVisible" Value="False"/>
        </Style>

        <!-- Ribbon Large Button -->
        <Style Selector="Button.ribbon-large">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="MinWidth" Value="56"/>
        </Style>
        <Style Selector="Button.ribbon-large:pointerover">
            <Setter Property="Background" Value="#E5F3FF"/>
            <Setter Property="BorderBrush" Value="#CCE4FF"/>
        </Style>
        <Style Selector="Button.ribbon-large:pressed">
            <Setter Property="Background" Value="#CCE4FF"/>
            <Setter Property="BorderBrush" Value="#99C9FF"/>
        </Style>
        <Style Selector="Button.ribbon-large:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Ribbon Small Button -->
        <Style Selector="Button.ribbon-small">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Height" Value="24"/>
        </Style>
        <Style Selector="Button.ribbon-small:pointerover">
            <Setter Property="Background" Value="#E5F3FF"/>
            <Setter Property="BorderBrush" Value="#CCE4FF"/>
        </Style>
        <Style Selector="Button.ribbon-small:pressed">
            <Setter Property="Background" Value="#CCE4FF"/>
            <Setter Property="BorderBrush" Value="#99C9FF"/>
        </Style>
        <Style Selector="Button.ribbon-small:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Ribbon Toggle Button -->
        <Style Selector="ToggleButton.ribbon-large">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="MinWidth" Value="56"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-large:pointerover">
            <Setter Property="Background" Value="#E5F3FF"/>
            <Setter Property="BorderBrush" Value="#CCE4FF"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-large:checked">
            <Setter Property="Background" Value="#CCE4FF"/>
            <Setter Property="BorderBrush" Value="#1A73E8"/>
        </Style>

        <!-- Ribbon Toggle Button Small -->
        <Style Selector="ToggleButton.ribbon-small">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-small:pointerover">
            <Setter Property="Background" Value="#E5F3FF"/>
            <Setter Property="BorderBrush" Value="#CCE4FF"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-small:checked">
            <Setter Property="Background" Value="#CCE4FF"/>
            <Setter Property="BorderBrush" Value="#1A73E8"/>
        </Style>

        <!-- Global text color fix for ribbon buttons -->
        <Style Selector="Button.ribbon-large TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style Selector="Button.ribbon-small TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-large TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style Selector="ToggleButton.ribbon-small TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- Menu styling -->
        <Style Selector="Menu">
            <Setter Property="Background" Value="#F8F8F8"/>
        </Style>
        <!-- Top-level menu items -->
        <Style Selector="Menu > MenuItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Menu > MenuItem:pointerover">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Menu > MenuItem:pointerover /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>
        <!-- Submenu popup styling -->
        <Style Selector="Menu MenuItem Popup">
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="Menu MenuItem Popup > Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <!-- Submenu items -->
        <Style Selector="MenuItem MenuItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="MenuItem MenuItem:pointerover">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="MenuItem MenuItem:pointerover /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>
        <!-- Context menu styling -->
        <Style Selector="ContextMenu">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="ContextMenu MenuItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ContextMenu MenuItem:pointerover">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <!-- MenuFlyout styling -->
        <Style Selector="MenuFlyoutPresenter">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="MenuFlyoutPresenter MenuItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="MenuFlyoutPresenter MenuItem:pointerover">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <!-- ComboBox styling -->
        <Style Selector="ComboBox">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- TextBox styling -->
        <Style Selector="TextBox">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- TextBlock default styling -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- Button default styling -->
        <Style Selector="Button">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- CheckBox styling -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- RadioButton styling -->
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- Quick Access Toolbar Button (white text on blue background) -->
        <Style Selector="Button.qat-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button.qat-button:pointerover">
            <Setter Property="Background" Value="#FFFFFF40"/>
        </Style>
        <Style Selector="Button.qat-button:pressed">
            <Setter Property="Background" Value="#FFFFFF60"/>
        </Style>
        <Style Selector="Button.qat-button TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Page number textbox - no focus border -->
        <Style Selector="TextBox#PageNumberTextBox:focus">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="TextBox#PageNumberTextBox:pointerover">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="TextBox#PageNumberTextBox /template/ Border#PART_BorderElement">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Styles>

    <DockPanel>
        <!-- Title Bar with Quick Access Toolbar (Foxit/PDF-XChange style) -->
        <Border DockPanel.Dock="Top"
                Background="#1A73E8">
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- App Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                    <TextBlock Text="ðŸ“„" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="PDF Viewer" FontSize="12" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Quick Access Toolbar -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Button Classes="qat-button" Click="OpenDocument_Click" ToolTip.Tip="Open (Ctrl+O)">
                        <TextBlock Text="ðŸ“‚" Foreground="White"/>
                    </Button>
                    <Button Classes="qat-button" Click="SaveAs_Click" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Save As (Ctrl+Shift+S)">
                        <TextBlock Text="ðŸ’¾" Foreground="White"/>
                    </Button>
                    <Button Classes="qat-button" Command="{Binding PrintCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Print (Ctrl+P)">
                        <TextBlock Text="ðŸ–¨ï¸" Foreground="White"/>
                    </Button>
                    <Rectangle Width="1" Height="16" Fill="#FFFFFF50" Margin="6,0"/>
                    <Button Classes="qat-button" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Undo">
                        <TextBlock Text="â†¶" Foreground="White" FontSize="16"/>
                    </Button>
                    <Button Classes="qat-button" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Redo">
                        <TextBlock Text="â†·" Foreground="White" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#F8F8F8" IsVisible="{Binding IsMenuBarVisible}">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OpenDocument_Click" HotKey="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‚"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Recent Files" x:Name="RecentFilesMenu"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}" HotKey="Ctrl+S" IsEnabled="{Binding IsDocumentLoaded}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _As..." Click="SaveAs_Click" HotKey="Ctrl+Shift+S" IsEnabled="{Binding IsDocumentLoaded}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Print..." Command="{Binding PrintCommand}" HotKey="Ctrl+P">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ–¨ï¸"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Properties" Click="ShowProperties_Click" HotKey="Ctrl+D">
                    <MenuItem.Icon>
                        <TextBlock Text="â„¹ï¸"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" HotKey="Alt+F4"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" HotKey="Ctrl+C">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Select _All" HotKey="Ctrl+A"/>
                <Separator/>
                <MenuItem Header="_Find..." Command="{Binding ToggleSearchPanelCommand}" HotKey="Ctrl+F">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Find _Next" HotKey="F3"/>
                <MenuItem Header="Find _Previous" HotKey="Shift+F3"/>
                <Separator/>
                <MenuItem Header="_Go To Page..." HotKey="Ctrl+G">
                    <MenuItem.Icon>
                        <TextBlock Text="#"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}" HotKey="Ctrl+OemPlus">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”+"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}" HotKey="Ctrl+OemMinus">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”-"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Actual Size" Command="{Binding ResetZoomCommand}" HotKey="Ctrl+D0"/>
                <Separator/>
                <MenuItem Header="Fit to _Width" Command="{Binding SetFitWidthCommand}"/>
                <MenuItem Header="Fit to _Page" Command="{Binding SetFitPageCommand}"/>
                <Separator/>
                <MenuItem Header="_Rotate Clockwise" Command="{Binding RotateClockwiseCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="â†»"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Rotate _Counter-Clockwise" Command="{Binding RotateCounterClockwiseCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="â†º"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Sidebar">
                    <MenuItem Header="_Thumbnails" IsChecked="True"/>
                    <MenuItem Header="_Bookmarks"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Full Screen" Command="{Binding ToggleFullScreenCommand}" HotKey="F11">
                    <MenuItem.Icon>
                        <TextBlock Text="â›¶"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Presentation Mode" Click="StartPresentation_Click" HotKey="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“½ï¸"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Two-Page View" Command="{Binding SetTwoPageModeCommand}"/>
                <MenuItem Header="Single Page View" Command="{Binding SetSinglePageModeCommand}"/>
                <MenuItem Header="Continuous Scroll" Command="{Binding SetContinuousModeCommand}"/>
            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem Header="_Select Text" Command="{Binding SetSelectToolCommand}"/>
                <MenuItem Header="_Hand Tool" Command="{Binding SetHandToolCommand}"/>
                <MenuItem Header="_Zoom Tool" Command="{Binding SetZoomToolCommand}"/>
                <Separator/>
                <MenuItem Header="_Measure Distance"/>
                <MenuItem Header="_Add Annotation"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_Keyboard Shortcuts"/>
                <MenuItem Header="_About PDF Viewer"/>
            </MenuItem>
        </Menu>

        <!-- Ribbon Interface (Foxit/PDF-XChange Style) -->
        <Border DockPanel.Dock="Top" Background="#F5F5F5" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" IsVisible="{Binding IsRibbonVisible}">
            <DockPanel>
                <!-- Ribbon Tabs Header -->
                <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="4,0,0,0">
                    <TabControl Classes="ribbon" x:Name="RibbonTabControl">
                        <!-- HOME TAB -->
                        <TabItem Header="HOME">
                            <Border Background="#FFFFFF" Padding="8,6" BorderBrush="#D0D0D0" BorderThickness="1,0,1,1">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Tools Group -->
                                    <Border Padding="4,0,8,0">
                                        <DockPanel>
                                            <TextBlock DockPanel.Dock="Bottom" Text="Tools" FontSize="10" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="2">
                                                <ToggleButton Classes="ribbon-large" Command="{Binding SetSelectToolCommand}" IsEnabled="{Binding IsDocumentLoaded}" IsChecked="{Binding IsSelectToolSelected, Mode=OneWay}" ToolTip.Tip="Select Text Tool">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="I" FontSize="22" FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Select" FontSize="10" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton Classes="ribbon-large" Command="{Binding SetHandToolCommand}" IsEnabled="{Binding IsDocumentLoaded}" IsChecked="{Binding IsHandToolSelected, Mode=OneWay}" ToolTip.Tip="Hand Tool (Pan/Grab)">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="âœ‹" FontSize="22" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Hand" FontSize="10" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </ToggleButton>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                    <Rectangle Width="1" Fill="#E0E0E0" Margin="4,4"/>

                                    <!-- Zoom Group -->
                                    <Border Padding="8,0">
                                        <DockPanel>
                                            <TextBlock DockPanel.Dock="Bottom" Text="Zoom" FontSize="10" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                                                <Button Classes="ribbon-small" Command="{Binding ZoomOutCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Zoom Out (Ctrl+-)" Content="âˆ’" FontSize="16" FontWeight="Bold"/>
                                                <Button Classes="ribbon-small" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Click for zoom presets">
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                                                            <MenuItem Header="50%" Command="{Binding ZoomToPresetCommand}" CommandParameter="50"/>
                                                            <MenuItem Header="75%" Command="{Binding ZoomToPresetCommand}" CommandParameter="75"/>
                                                            <MenuItem Header="100%" Command="{Binding ZoomToPresetCommand}" CommandParameter="100"/>
                                                            <MenuItem Header="125%" Command="{Binding ZoomToPresetCommand}" CommandParameter="125"/>
                                                            <MenuItem Header="150%" Command="{Binding ZoomToPresetCommand}" CommandParameter="150"/>
                                                            <MenuItem Header="200%" Command="{Binding ZoomToPresetCommand}" CommandParameter="200"/>
                                                            <MenuItem Header="300%" Command="{Binding ZoomToPresetCommand}" CommandParameter="300"/>
                                                            <Separator/>
                                                            <MenuItem Header="Fit Width" Command="{Binding SetFitWidthCommand}"/>
                                                            <MenuItem Header="Fit Page" Command="{Binding SetFitPageCommand}"/>
                                                            <MenuItem Header="Actual Size" Command="{Binding SetActualSizeCommand}"/>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                    <Border Background="White" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="3" Padding="8,4">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <TextBlock Text="{Binding ZoomFactor, StringFormat='{}{0:P0}'}"
                                                                       FontSize="11"
                                                                       VerticalAlignment="Center"
                                                                       Width="40"
                                                                       TextAlignment="Center"/>
                                                            <TextBlock Text="â–¼" FontSize="8" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Button>
                                                <Button Classes="ribbon-small" Command="{Binding ZoomInCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Zoom In (Ctrl++)" Content="+" FontSize="16" FontWeight="Bold"/>
                                                <Rectangle Width="1" Fill="#E8E8E8" Margin="6,4"/>
                                                <Button Classes="ribbon-small" Command="{Binding SetFitWidthCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Fit Width">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <TextBlock Text="â†”" FontSize="12"/>
                                                        <TextBlock Text="Width" FontSize="10"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Classes="ribbon-small" Command="{Binding SetFitPageCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Fit Page">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <TextBlock Text="â›¶" FontSize="12"/>
                                                        <TextBlock Text="Page" FontSize="10"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                    <Rectangle Width="1" Fill="#E0E0E0" Margin="4,4"/>

                                    <!-- Rotate Group -->
                                    <Border Padding="8,0">
                                        <DockPanel>
                                            <TextBlock DockPanel.Dock="Bottom" Text="Rotate" FontSize="10" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="2">
                                                <Button Classes="ribbon-large" Command="{Binding RotateCounterClockwiseCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Rotate Left">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="â†º" FontSize="22" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Left" FontSize="10" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Classes="ribbon-large" Command="{Binding RotateClockwiseCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Rotate Right">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="â†»" FontSize="22" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Right" FontSize="10" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                    <Rectangle Width="1" Fill="#E0E0E0" Margin="4,4"/>

                                    <!-- Find Group -->
                                    <Border Padding="8,0">
                                        <DockPanel>
                                            <TextBlock DockPanel.Dock="Bottom" Text="Find" FontSize="10" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            <Button Classes="ribbon-large" Command="{Binding ToggleSearchPanelCommand}" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Search (Ctrl+F)">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="ðŸ”" FontSize="22" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Search" FontSize="10" Foreground="#333333" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </DockPanel>
                                    </Border>
                                    <Rectangle Width="1" Fill="#E0E0E0" Margin="4,4"/>

                                    <!-- View Group -->
                                    <Border Padding="8,0">
                                        <DockPanel>
                                            <TextBlock DockPanel.Dock="Bottom" Text="View" FontSize="10" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="2">
                                                <ToggleButton Classes="ribbon-large" IsEnabled="{Binding IsDocumentLoaded}" IsChecked="{Binding IsSidebarVisible}" ToolTip.Tip="Thumbnails">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="ðŸ“‘" FontSize="20" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Thumbnails" FontSize="9" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </ToggleButton>
                                                <Button Classes="ribbon-large" IsEnabled="{Binding IsDocumentLoaded}" ToolTip.Tip="Bookmarks">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="ðŸ“–" FontSize="20" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Bookmarks" FontSize="9" Foreground="#333333" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Classes="ribbon-large" Command="{Binding ToggleFullScreenCommand}" ToolTip.Tip="Full Screen (F11)">
